<% if (success) { %>
<div class="alert alert-success alert-dismissible fade show mx-auto" role="alert" id="flash-message" style="max-width: 500px;">
  <%= success %>
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% } %>
<script>
  // Remove flash message after 3 seconds
  setTimeout(() => {
    const flashMessage = document.getElementById('flash-message');
    if (flashMessage) {
      flashMessage.remove();
    }
  }, 3000);
</script>
