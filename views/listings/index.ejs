<% layout("layouts/boilerplate") %>
<body>
  <h3>All Listings</h3>
  <div class="row row-cols-md-3 row-cols-sm-2 row-cols-1 mt-1 g-4">
    <% for (let listing of allListings) { %>
    <div class="col">
      <div class="card h-100 overflow-hidden shadow-sm">
        <a href="/listings/<%= listing._id %>" class="listing-link">
          <div class="position-relative">
            <img
              src="<%= listing.image && listing.image.url ? listing.image.url.trim() : 'https://via.placeholder.com/300' %>"
              class="card-img-top object-fit-cover"
              alt="Listing Image"
              style="height: 15rem; width: 100%;"
            />
            <div class="card-img-overlay d-flex justify-content-end">
              <button class="btn btn-sm btn-light rounded-pill">
                <i class="bi bi-heart"></i>
              </button>
            </div>
          </div>
          <div class="card-body p-3">
            <div class="d-flex justify-content-between align-items-center mb-2">
              <small class="text-muted"><%= listing.location %></small>
              <div>
                <i class="bi bi-star-fill text-warning"></i>
                <small><%= listing.rating ? listing.rating.toFixed(2) : 'New' %></small>
              </div>
            </div>
            <p class="card-text mb-1">
              <b><%= listing.title %></b>
            </p>
            <p class="card-text text-muted mb-0">
              &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
            </p>
          </div>
        </a>
      </div>
    </div>
    <% } %>
  </div>
</body>